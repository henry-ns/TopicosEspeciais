<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="br.edu.ifpb.calculadora.MainActivity"
    android:background="#ffffff"
    android:padding="0dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/screen"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="70dp"
                android:layout_weight="1"
                android:layout_column="0"
                android:autoText="false"
                android:gravity="bottom|right"
                android:maxLines="2"
                android:maxLength="18" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="75">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="7"
                        android:id="@+id/btn7"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="8"
                        android:id="@+id/btn8"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="9"
                        android:id="@+id/btn9"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="4"
                        android:id="@+id/btn4"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="5"
                        android:id="@+id/btn5"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="6"
                        android:id="@+id/btn6"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25">

                    <Button
                        android:text="1"
                        android:id="@+id/btn1"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="2"
                        android:id="@+id/btn2"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="3"
                        android:id="@+id/btn3"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="."
                        android:id="@+id/btnp"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="0"
                        android:id="@+id/btn0"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:text="="
                        android:id="@+id/iqual"
                        android:layout_column="0"
                        android:background="#232323"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="C"
                        android:id="@+id/del"
                        android:layout_column="0"
                        android:background="#383838"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="/"
                        android:id="@+id/div"
                        android:layout_column="0"
                        android:background="#383838"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="*"
                        android:id="@+id/mult"
                        android:layout_column="0"
                        android:background="#383838"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="-"
                        android:id="@+id/sub"
                        android:layout_column="0"
                        android:background="#383838"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25" >

                    <Button
                        android:text="+"
                        android:id="@+id/add"
                        android:layout_column="0"
                        android:background="#383838"
                        android:textColor="#ffffff"
                        android:textSize="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>

        </TableRow>

    </TableLayout>

</RelativeLayout>
